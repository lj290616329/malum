.main{
  width:100%;
  padding: 1rem 0;
}
.item-box{
  background-color:#f5f5f5;
}
.item-title{
   font-size: 0.75rem;
   padding: 0.3125rem 1rem;
}
.item{
   display: flex;
   background-color: #fff;
   align-items: center;
   padding: 1rem;
   border-bottom: 0.06rem solid #eee;
}
.item-box .item:last-child{
  border-bottom: none;
}
.item_hd{
   flex:1;
}
.item_hd_ft{
   text-align: right;
}
.item_hd_title{
   font-size: 1rem;
   color: #252525;
}
.item_hd_des{
   font-size: 0.625rem;
   color:#616161;
   line-height: 2;
}
.item_hd_val{
   font-size: 0.8rem;
}